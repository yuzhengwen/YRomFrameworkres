<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/somc_seekbar_bg_disabled_light" />
    <item>
        <layer-list>
            <item android:id="@id/background" android:drawable="@drawable/somc_seekbar_bg_light" />
            <item android:id="@id/secondaryProgress">
                <scale android:drawable="@drawable/somc_seekbar_progress_secondary_light" android:scaleWidth="100%" />
            </item>
            <item android:id="@id/progress">
                <scale android:drawable="@drawable/somc_seekbar_progress_primary_light" android:scaleWidth="100%" />
            </item>
        </layer-list>
    </item>
</selector>